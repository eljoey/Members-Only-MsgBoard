extends layout

block content
    h1(style='text-align: center;')= title

    form.my-auto.form-signin(action="", method="post")
        div.form-label-group
            input#username.form-control(type='text' name='username' value=(undefined == info ? '' : info.username) placeholder='Username' required)
            label(for='username') Username
        div.form-label-group
            input#password.form-control(type='password' name='password' placeholder='Password' required)
            label(for='password') Password
        button.btn.btn-primary.btn-block(type='submit') Log In

    if info
        ul
            li!= info.msg