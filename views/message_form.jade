extends layout

block content
    h1(style=('text-align: center;'))= title
    
    form(action="", method="post")
        div.form-group
            label(for='title') Title: 
            input#title.form-control(type='text' name='title' value=(undefined == info ? '' : info.title) placeholder='Title')
            label(for='message') Message:
            textarea#message.form-control(name='message' rows='3' placeholder='Enter message here')
        button.btn.btn-primary(type='submit') Create Message
    
    if errors
        ul
            for error in errors
                li!= error.msg